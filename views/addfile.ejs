<main>
    
    <div class="container mt-5">
        <div class="row justify-content-center p-3 shadow-sm rounded bg-white my-3">
            <h3><b>Unggah/Edit</b></h3>
        </div>

        <div class="row justify-content-center pt-1 shadow-sm rounded bg-white">
            <div class="col">
                <div class="row px-3 py-2">
                    <h4><b>Materi</b></h4>
                </div>
                <form action="/user/upload" method="POST" class="needs-validation" enctype="multipart/form-data" novalidate>
                    <div class="row px-3 py-2">
                        <label for="namaFile"><b>Nama File</b></label>
                        <input
                            type="text"
                            class="form-control"
                            id="namaFile"
                            name="NamaFile"
                            placeholder=""
                            value=""
                            required
                        />
                        <div class="invalid-feedback">
                            Tolong masukkan nama yang valid
                        </div>
                    </div>

                    <div class="row px-3 py-2">
                        <label for="mapel">Mata Pelajaran/Kuliah</label>
                        <select class="form-control" id="mapel" name="mapel">
                            <option>Matematika</option>
                            <option>Fisika</option>
                            <option>Kimia</option>
                            <option>Biologi</option>
                            <option>Bahasa</option>
                            <option>Sosiologi</option>
                            <option>Geografi</option>
                            <option>Sejarah</option>
                            <option>Ekonomi</option>
                            <option>Agama</option>
                        </select>
                    </div>

                    <div class="row px-3 py-2">
                        <label for="deskripsi"><b>Deskripsi</b></label>
                        <textarea
                            type="text"
                            class="form-control"
                            id="deskripsi"
                            name="Deskripsi"
                            placeholder=""
                            value=""
                            required>
                        </textarea>
                        <div class="invalid-feedback">
                            Tolong masukkan Deskripsi yang valid
                        </div>
                    </div>

                    <div class="row px-3 py-2">
                            <label for="unggah"><b>Unggah</b></label>
                            <input
                            type="file"
                            class="form-control"
                            id="fileNameforUpload"
                            name="fileNameforUpload"
                            required
                            />
                            <div class="invalid-feedback">
                            Tolong masukkan file yang valid
                            </div>
                        </div>

                        <div class="row px-3 py-2">              
                            <button
                            class="btn btn-danger btn-block col-md-3 mb-3 float-right"
                            type="submit"
                            >
                            Unggah             
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</main>