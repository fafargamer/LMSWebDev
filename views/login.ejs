   <main>
    <div class="jumbotron vertical-center">
      <div class="container">
        <div
          class="row justify-content-center pt-3 shadow-sm rounded bg-white my-3"
        >
          <!-- <%= typeof msg != 'undefined' ? msg : '' %> -->
          <div class="col-md-6">
            <h4 class="my-3 text-center"><b>Login</b></h4>
            <form method="post" action="/login" class="needs-validation" novalidate>
              <div class="mb-3">
                <label for="username"> <b>Username</b></label>
                <input
                  type="text"
                  class="form-control"
                  id="Username"
                  name="username"
                  placeholder=""
                  required
                />
              </div>

              <div class="mb-3">
                <label for="password"><b>Password</b></label>
                <input
                  type="password"
                  class="form-control"
                  id="Password"
                  name="password"
                  placeholder=""
                  required
                />
              </div>

              <hr class="mb-4" />

              <button
                class="btn btn-danger btn-block col-md-3 mb-5"
                type="submit text-center"
              >
                Login
              </button>
            </form>
            <div class="row justify-content-center pt-3 shadow-sm rounded bg-white my-3">
              <h5>
                <a href="/register">
                    Register?
                </a>
              </h5>
            </div>
          </div>
        </div>
      </div>
