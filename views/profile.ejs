   <main>
      <div class="container">
        <div
          class="row justify-content-center pt-3 shadow-sm rounded bg-white my-3"
        >
          <div class="col-md-6">
            <h4 class="my-3"><b>Profil</b></h4>
            <form class="needs-validation" action="/user/updateProfile" method="POST" novalidate>
              <div class="mb-3">
                <label for="name"><b>Nama</b></label>
                <input
                  type="text"
                  class="form-control"
                  id="Nama"
                  name="nama"
                  placeholder=""
                  value="<%=data.namaLengkap%>"
                  required
                />
              </div>

              <div class="mb-3">
                <label for="email"><b>Email</b></label>
                <input
                  type="text"
                  class="form-control"
                  id="Email"
                  name="email"
                  value="<%=data.email%>"
                  required
                />
              </div>

              <div class="mb-3">
                <label for="username"> <b>Username</b></label>
                <input
                  type="text"
                  class="form-control"
                  id="Username"
                  name="username"
                  value="<%=data.username%>"
                  required
                />
              </div>

              <!-- <div class="mb-3">
                <label for="password"><b>Password</b></label>
                <input
                  type="password"
                  class="form-control"
                  id="Password"
                  name="password"
                  value=""
                  required
                />
              </div> -->

              <div class="mb-3">
                <label for="institusi"><b>Institusi</b></label>
                <input
                  type="text"
                  class="form-control"
                  id="Institusi"
                  name="institusi"
                  value="<%=data.institusi%>"
                  required
                />
              </div>

              <div class="mb-3">
                <label for="instagram"><b>Instagram</b></label>
                <input
                  type="text"
                  class="form-control"
                  id="Instagram"
                  name="instagram"
                  value="<%=data.akunInstagram%>"
                  required
                />
              </div>

              <div class="mb-3">
                <label for="facebook"><b>Facebook</b></label>
                <input
                  type="text"
                  class="form-control"
                  id="Facebook"
                  name="facebook"
                  value="<%=data.akunFacebook%>"
                  required
                />
              </div>

              <div class="mb-3">
                <label for="youtube"><b>Youtube</b></label>
                <input
                  type="text"
                  class="form-control"
                  id="Youtube"
                  name="youtube"
                  value="<%=data.akunYoutube%>"
                  required
                />
              </div>

              <hr class="mb-4" />

              <button
                class="btn btn-danger btn-block col-md-3 mb-5"
                type="submit"
              >
                Ubah Profil
              </button>
            </form>
          </div>
        </div>
      </div>
